@model IEnumerable<AtnWeb.Models.Toy>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>List Of Toys</h2>
<a class="btn btn-primary" asp-controller="Toys" asp-action="Upsert">Create a Toy</a>

<br>
<br>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id #</th>
        <th>Toy Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Desciption</td>
            <td>@item.Price</td>
            <td>@item.Amount</td>
            <td>
                <a asp-controller="Toys" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-default btn-info">Edit</a>
                <a href="/Authenticated/Toys/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
            
        </tr>
        
    }
    </tbody>
</table>